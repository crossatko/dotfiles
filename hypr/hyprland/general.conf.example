general {
    gaps_in = 2
    gaps_out = 4
    border_size = 3
    col.active_border = $rose $rose $rose 45deg
    col.inactive_border = $muted
    layout = dwindle
}

# Groups
group {
  col.border_inactive = $muted
  col.border_active = $rose $rose $rose 45deg
  groupbar {
    font_family = $fontFamily
    col.active = $rose
    col.inactive = $muted
    text_color = $base
    render_titles = false
    height = 0
    stacked = false
  }
}


decoration {
  rounding = 12
  rounding_power = 3.0
  active_opacity = 1.0
  inactive_opacity = 0.975
  blur {
    enabled = true
    size = 5
    passes = 2
    popups = false
  }
  shadow {
    enabled = true
    range = 64
    render_power = 4
    color = 0x33000000
  }
}

blurls = launcher

layerrule = blur, waybar
layerrule = ignorezero, waybar
layerrule = ignorealpha 0.5, waybar

layerrule = blur, launcher

animations {
    enabled = true
    bezier = myBezier, 0,.8,.2,1
    animation = windows, 1, 1.5, myBezier
    animation = windowsOut, 1, 1.5, default, popin 80%
    animation = border, 1, 1.5, default
    animation = borderangle, 1, 1.5, default
    animation = fade, 1, 1.5, default
    animation = workspaces, 1, 1.5, default, slidefade 5%
}

dwindle {
  pseudotile = true
  preserve_split = true
  force_split=2
  split_width_multiplier = 1.3
}

misc {
  disable_splash_rendering = true
  disable_hyprland_logo = true
  focus_on_activate = true
  key_press_enables_dpms = true
}
